.container-fluid
	.row
		.col-md
			h2
				= fa_icon 'user', class: 'primary-color fa-margin-lg'
				| Editing <%= singular_table_name.titleize %>
				small.primary-color.title-hint
					= @<%= singular_table_name %>.name
	.row.margin-top-10
		.col-md
			= render 'form'
	.row
		.col-md
			= link_to 'Show', <%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary margin-right-10'
			= link_to 'Back', <%= plural_table_name %>_path, class: 'btn btn-secondary'
